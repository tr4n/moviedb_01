<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_dark_shade_of_gray"
    android:padding="@dimen/dp_14"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatarReviewer"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:scaleType="centerCrop"
        app:strokeColor="@null"
        app:shapeAppearanceOverlay="@style/circle"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@id/imgAvatarReviewer"/>

    <TextView
        android:id="@+id/textAuthor"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/imgAvatarReviewer"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textContent"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/textAuthor"
        android:layout_toRightOf="@id/imgAvatarReviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
